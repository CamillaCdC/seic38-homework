<%= form_for @author do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :required => true, :autofocus =>true %>

  <%= f.label :country %>
  <%= f.text_field :country %>

  <%= f.label :date %>
  <%= f.text_field :dob, :placeholder => 'YYY-MM-DD' %>

  <%= f.label :style %>
  <%= f.text_field :style %>

  <%= f.label :image %>
  <%= f.url_field :image %>

  <%= f.submit %>
<% end %>
