<h2>Add New Mountain</h2>

<form action="<%= mountains_path %>" method="post">
  <label>
    Name:
    <input name="name" required>
  </label>

  <label>
    Category:
    <input name="category">
  </label>

  <label>
    Elevation:
    <input name="height">
  </label>

  <label>
    Location:
    <input input="number" name="country">
  </label>

  <label>
    Climate:
    <input name="climate">
  </label>

  <label>
    Image:
    <input name="image">
  </label>

<button>Create Mountain</button>
</form>
