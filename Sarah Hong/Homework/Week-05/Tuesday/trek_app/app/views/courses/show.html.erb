<h2> <%= @course[:name] %> </h2>

<%= image_tag @course[:image], :class => 'feature' if @course.image.present? %>

<ul>
  <li> Name: <%= @course[:name] %> </li>
  <li> Location: <%= @course[:location] %> </li>
  <li> Distance: <%= @course[:distance] %> </li>
  <li> Level of Difficulty: <%= @course[:difficulty] %> </li>
  <li> Duration: <%= @course[:days] %> days </li>
</ul>

<div class="controls">
  <%= link_to 'Edit', edit_course_path(@course.id) %>
  <%= button_to 'Delete', course_path(@course.id), :method => 'delete' %>
</div>
