<%=form_for @album do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, :required => true, :autofocus => true%>

  <%= f.label :year %>
  <%= f.text_field :year, :placeholder => 'YYYY'%>

  <%= f.label :genre %>
  <%= f.text_field :genre%>

  <%= f.label :image %>
  <%= f.url_field :image%>

  <%= f.label :singer_id %>
  <%= f.select :singer_id, Singer.pluck(:name, :id), :include_blank => true %>

  <%= f.submit %>
  <% end %>
