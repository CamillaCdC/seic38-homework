

<%= form_for @book do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, :required => true, :autofocus => true %>

  <%= f.label :author %>
  <%= f.text_field :author %>

  <%= f.label :year %>
  <%= f.text_field :year %>

  <%= f.label :image %>
  <%= f.url_field :image %>

  <%= f.submit %>

<% end %>
