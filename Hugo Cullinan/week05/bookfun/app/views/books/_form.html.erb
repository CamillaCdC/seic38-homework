<%= form_for @book do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title%>

  <%= f.label :author %>
  <%= f.text_field :author %>

  <%= f.label :genre %>
  <%= f.text_field :genre %>

  <%= f.label :year %>
  <%= f.text_field :year %>

  <%= f.label :image %>
  <%= f.url_field :image, :required => true %>

  <%= f.submit %>
<% end %>
