<title><%="#{@book_title}"%></title>

<div id="book-container">
  <header>
    <nav>
      <a href="/">Home</a>
      <a href= <%= "#{@book_previewLink}" %> target='_blank'>Preview Link</a>
    </nav>
    <h1> <%= "#{@book_title}" %> </h1>
  </header>

  <div id='columns'>
      <div id='author'>
        <p>Author(s): <br><%= "#{@book_author}" %>.</p>
        <img src= <%="#{@img_src}"%> alt= <%="#{@book_title}"%>>
      </div>

      <div id = 'description'>
        <p> <%= "#{@book_desc}" %> </p>
      </div>
  </div>
</div>
