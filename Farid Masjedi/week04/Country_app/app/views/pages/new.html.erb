<header>
  <%= link_to 'Home', root_path %>
  <h2>Add a new country</h2>
</header>


<form action="<%= root_path %>" method="post">
  <div id="labels">
    <p><label>Name:</label></p>
    <p><label>Flag:</label></p>
    <p><label>Continent:</label></p>
    <p><label>Area:</label></p>
    <p><label>Population:</label></p>
    <p><label>GDP (Billions):</label></p>
    <p><label>HDI:</label></p>
  </div>

  <div id="inputs">
    <p><input name='name' placeholder="Australia" required></p>
    <p><input type='url' name='flag' placeholder="https://..."></p>
    <p><input name='continent' placeholder='Oceania'></p>
    <p><input type="number" name='area' placeholder='7692024' step='0.001'></p>
    <p><input type="number" name='population' placeholder='25679600'></p>
    <p><input type="number" name='gdp' placeholder='1423' step='0.001'></p>
    <p><input type="number" name='hdi' step='0.001' placeholder='0.938'></p>
  </div>

  <div id="button">
    <button>Add</button>
  </div>
</form>
